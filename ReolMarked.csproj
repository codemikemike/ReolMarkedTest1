<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Output type som Windows Application -->
		<OutputType>WinExe</OutputType>

		<!-- Target framework - .NET 9.0 -->
		<TargetFramework>net9.0-windows</TargetFramework>

		<!-- Nullable reference types -->
		<Nullable>enable</Nullable>

		<!-- Implicit usings for cleaner code -->
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Aktiverer WPF support -->
		<UseWPF>true</UseWPF>

		<!-- Applikations info -->
		<AssemblyTitle>Middelby ReolMarked</AssemblyTitle>
		<Product>ReolMarked Administration System</Product>
		<Description>WPF MVVM applikation til h�ndtering af reol udlejning</Description>
		<Company>Middelby ReolMarked</Company>

		<!-- Applikation ikon (hvis vi har en) -->
		<!-- <ApplicationIcon>Images\icon.ico</ApplicationIcon> -->
	</PropertyGroup>

	<ItemGroup>
		<!-- Opret Images mappe -->
		<Folder Include="Images\" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Dapper" Version="2.1.66" />
	  <PackageReference Include="Microsoft.Data.SqlClient" Version="6.1.1" />
	  <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.9" />
	</ItemGroup>

	<!-- Ingen ekstra pakker n�dvendige for basic WPF MVVM -->
	<!-- Hvis vi senere vil tilf�je database support: -->
