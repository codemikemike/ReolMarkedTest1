<Window x:Class="ReolMarked.MVVM.Views.FakturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Middelby Reolmarked - Månedlig Afregning" 
        Height="1000" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E5BBA" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="20,15">
                    <TextBlock Text="Månedlig Afregning" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Jonas og Sofies månedopgørelse - Salg minus Kommission minus Reolleje" 
                               FontSize="14" 
                               Foreground="LightBlue"/>
                </StackPanel>

                <!-- Periode valg -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="År:" 
                               FontSize="14" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Text="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" 
                             Height="30"
                             Padding="5"
                             VerticalAlignment="Center"
                             Margin="0,0,15,0"/>

                    <TextBlock Text="Måned:" 
                               FontSize="14" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Text="{Binding SelectedMonth, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" 
                             Height="30"
                             VerticalAlignment="Center"
                             Margin="0,0,15,0"/>

                    <Button Content="Indlæs Periode" 
                            Command="{Binding LoadPeriodCommand}"
                            Background="#4CAF50" 
                            Foreground="White" 
                            Padding="15,5"
                            Margin="10,0"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- OPDATERET Oversigt og handlinger med reolleje -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- OPDATERET Totaler oversigt - nu med 5 kolonner inkl. reolleje -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total omsætning -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Total Omsætning" 
                                       FontSize="11" 
                                       Foreground="#666" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding TotalRevenueFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#2E5BBA" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Kommission (10%) -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Kommission" 
                                       FontSize="11" 
                                       Foreground="#666" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="(10%)" 
                                       FontSize="9" 
                                       Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalCommissionFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9800" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- NYE - Reolleje -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Reolleje" 
                                       FontSize="11" 
                                       Foreground="#666" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="(Næste måned)" 
                                       FontSize="9" 
                                       Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalRentFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#9C27B0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Udbetalinger -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Udbetalinger" 
                                       FontSize="11" 
                                       Foreground="#666" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPayoutsFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#4CAF50" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Regninger (Røde tal) -->
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                            <TextBlock Text="Regninger" 
                                       FontSize="11" 
                                       Foreground="#666" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="(Røde tal)" 
                                       FontSize="9" 
                                       Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalBillsFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#F44336" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- OPDATERET Handlingsknapper med netto resultat -->
                <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel Margin="15" VerticalAlignment="Center">
                        <!-- NYE - Butikkens netto resultat -->
                        <Border Background="#37474F" Padding="10,8" Margin="0,0,0,15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Butikkens Netto" 
                                           FontSize="12" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding NetStoreResultFormatted}" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Button Content="Opret Månedlige Fakturaer" 
                                Command="{Binding CreateMonthlyFakturaerCommand}"
                                Background="#2E5BBA" 
                                Foreground="White" 
                                Height="40"
                                Margin="0,5"
                                BorderThickness="0" 
                                FontWeight="SemiBold"/>

                        <Button Content="Genindlæs Data" 
                                Command="{Binding RefreshDataCommand}"
                                Background="#666" 
                                Foreground="White" 
                                Height="30"
                                Margin="0,5"
                                BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- OPDATERET Faktura lister - nu med 4 kolonner -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Alle fakturaer -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F8F9FA" Padding="10,8">
                            <TextBlock Text="{Binding MonthlyFakturaer.Count, StringFormat='Alle Fakturaer ({0})'}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"/>
                        </Border>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding MonthlyFakturaer}"
                                 SelectedItem="{Binding SelectedFaktura}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="8">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1" 
                                            Margin="0,3" 
                                            Padding="8">

                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding TotalSalesFormatted, StringFormat='Salg: {0}'}" 
                                                       FontSize="10" 
                                                       Foreground="#666"/>
                                            <TextBlock Text="{Binding NextMonthRentFormatted, StringFormat='Leje: {0}'}" 
                                                       FontSize="10" 
                                                       Foreground="#9C27B0"/>
                                            <TextBlock Text="{Binding NetAmountDisplayFormatted}" 
                                                       FontSize="12" 
                                                       FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#666"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPositiveAmount}" Value="True">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsNegativeAmount}" Value="True">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="9" 
                                                       Foreground="#999"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Udbetalinger (Positive beløb) -->
                <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#E8F5E8" Padding="10,8">
                            <TextBlock Text="{Binding PayoutFakturaer.Count, StringFormat='Udbetalinger ({0})'}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#4CAF50"/>
                        </Border>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding PayoutFakturaer}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="8">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FFF9" 
                                            BorderBrush="#4CAF50" 
                                            BorderThickness="1" 
                                            Margin="0,3" 
                                            Padding="8">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding CustomerName}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="11"/>

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding TotalSalesFormatted, StringFormat='Salg: {0}'}" 
                                                       FontSize="9" 
                                                       Foreground="#666"/>

                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding NetAmountFormatted}" 
                                                       FontSize="14" 
                                                       FontWeight="Bold"
                                                       Foreground="#4CAF50"/>

                                            <Button Grid.Row="3"
                                                    Content="Udbetal"
                                                    Command="{Binding DataContext.ProcessPayoutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#4CAF50"
                                                    Foreground="White"
                                                    Height="25"
                                                    Margin="0,3,0,0"
                                                    BorderThickness="0"
                                                    FontSize="10"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Regninger (Negative beløb - "Røde tal") -->
                <Border Grid.Column="4" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#FFEBEE" Padding="10,8">
                            <TextBlock Text="{Binding BillFakturaer.Count, StringFormat='Regninger ({0})'}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#F44336"/>
                        </Border>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding BillFakturaer}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="8">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF9F9" 
                                            BorderBrush="#F44336" 
                                            BorderThickness="1" 
                                            Margin="0,3" 
                                            Padding="8">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding CustomerName}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="11"/>

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding NextMonthRentFormatted, StringFormat='Leje: {0}'}" 
                                                       FontSize="9" 
                                                       Foreground="#666"/>

                                            <TextBlock Grid.Row="2"
                                                       FontSize="14" 
                                                       FontWeight="Bold"
                                                       Foreground="#F44336">
                                                <TextBlock.Text>
                                                    <Binding Path="NetAmount" StringFormat="{}{0:C0}"/>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <Button Grid.Row="3"
                                                    Content="Send Regning"
                                                    Command="{Binding DataContext.SendBillCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#F44336"
                                                    Foreground="White"
                                                    Height="25"
                                                    Margin="0,3,0,0"
                                                    BorderThickness="0"
                                                    FontSize="10"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- NYE - Lige Op (Nul beløb) -->
                <Border Grid.Column="6" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F0F0F0" Padding="10,8">
                            <TextBlock Text="{Binding ZeroAmountFakturaer.Count, StringFormat='Lige Op ({0})'}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#666"/>
                        </Border>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding ZeroAmountFakturaer}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="8">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FAFAFA" 
                                            BorderBrush="#CCC" 
                                            BorderThickness="1" 
                                            Margin="0,3" 
                                            Padding="8">

                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding TotalSalesFormatted, StringFormat='Salg: {0}'}" 
                                                       FontSize="9" 
                                                       Foreground="#666"/>
                                            <TextBlock Text="0 kr" 
                                                       FontSize="14" 
                                                       FontWeight="Bold"
                                                       Foreground="#666"/>
                                            <TextBlock Text="Ingen handling" 
                                                       FontSize="9" 
                                                       Foreground="#999"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer - Status -->
        <Border Grid.Row="2" 
                Background="#37474F" 
                Margin="0,15,0,0"
                Padding="15,8">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Luk"
                        Click="CloseButton_Click"
                        Background="#666"
                        Foreground="White"
                        Padding="15,5"
                        BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>